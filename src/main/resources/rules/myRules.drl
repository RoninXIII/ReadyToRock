rule "Go forward"
    
    when
   $b: Board()
   $p: Player(cardToPlay == "Straight" && getActions() > 0) 
    then
    $p.setCell($p.getTopCell($b));
    $p.getCards().remove($p.cardToPlay);
    $p.cardToPlay = "";
   // $p.getCards().remove($p.cardToPlay);
    $p.setActions($p.getActions()-1);
       

end

